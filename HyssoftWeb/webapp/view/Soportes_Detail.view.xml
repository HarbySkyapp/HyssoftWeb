<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="HyssoftWeb.HyssoftWeb.controller.Soportes_Detail" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" id="detail" title="{i18n>DetailTitle}" showNavButton="true" navButtonPress="action" action:wiring="\{'navButtonPress':\{'navigation':\{'routeName':'Soportes_Lista'\}\}\}">
	
		<sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="form0">
			 <sap.ui.layout.form:content>
		        <sap.ui.core:Title text="Editar ticket" id="title1"/>
		        	<Label text="FECHA" id="fecha"/>
					<Input width="100%" value="{FECHA}" id="FECHA"/>
					<Label text="TIPO SOPORTE" id="tiposoporte"/>
					<Input width="100%" id="TIPOSOPORTE" value="{TIPOSOPORTE}"/>
					<Label text="DESCRIPCION" id="descripcion"/>
					<Input width="100%" id="DESCRIPCION" value="{DESCRIPCION}"/>
				    <Label text="SOLUCION" id="solucion"/>
				    <Input width="100%" id="SOLUCION" value="{SOLUCION}"/>
				    <Label text="HORAS" id="horas"/>
				    <Input width="100%" id="HORAS" value="{HORAS}"/>
				    <Label text="TICKET" id="ticket"/>
				    <Input width="100%" id="TICKET_TICKET" value="{TICKET_TICKET}"/>
				    <Label text="CED. CONSULTOR" id="cedulaconsultor"/>
				    <Input width="100%" id="CONSULTOR_CEDULA" value="{CONSULTOR_CEDULA}"/>
				    <Label text="NOMBRE PROGRAMA" id="programa_nombre"/>
				    <Input width="100%" id="PROGRAMA_NOMBRE" value="{PROGRAMA_NOMBRE}"/>
				     
		    </sap.ui.layout.form:content>
		</sap.ui.layout.form:SimpleForm>
		<FlexBox width="100%" id="box0" justifyContent="Center">
		    <items>
		        <Button xmlns="sap.m" text="Modificar" id="button0" press="modificarticket" width="150px"/>
		        <Button xmlns="sap.m" text="Eliminar" id="button1" width="150px" press="onDelete0"/>
		    </items>
		</FlexBox>
	
	</Page>
</mvc:View>