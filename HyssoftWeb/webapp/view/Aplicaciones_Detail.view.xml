<mvc:View xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="HyssoftWeb.HyssoftWeb.controller.Aplicaciones_Detail" height="100%">
	<Page xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" id="idPage" title=" Detalles de aplicaciones" class="sapUiResponsivePadding--header" showNavButton="true" navButtonPress="action" action:wiring="\{'navButtonPress':\{'navigation':\{'routeName':'Aplicaciones_Lista'\}\}\}">
		<!-- this CSS class add a standard spacing to all the page content -->
		<content>
			<FlexBox width="100%" id="box0" justifyContent="End">
			    <items>
			    	<OverflowToolbarButton tooltip="Delete" text="Delete" icon="sap-icon://delete" press="onDelete0"/>
			    	<OverflowToolbarButton tooltip="Edit" text="Edit" icon="sap-icon://edit" press="handleListItemPressEditarEmpresa"/>
			    </items>
			</FlexBox>
			<ObjectHeader backgroundDesign="Solid" number="Paquete: {PAQUETE}" numberUnit="Codigo: {CODIGO}" intro="Nombre Aplicacion:" icon="sap-icon://laptop" titleLevel="H6" title="{NOMBRE}">
				
			</ObjectHeader>
			<IconTabBar expanded="{device>/isNoPhone}" class="sapUiSmallMarginBottom sapUiResponsiveContentPadding">
				<items>
					<!-- PAGINACION DE PROGRAMAS-->
					<IconTabFilter text="Programas" icon="sap-icon://desktop-mobile">
						<Panel>
					    	<headerToolbar>
		                        <OverflowToolbar>
		                            <ToolbarSpacer/>
		                            <OverflowToolbarButton xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" type="Transparent" icon="sap-icon://add" press="handleListItemPressProgramas"/>
		                        </OverflowToolbar>
		                    </headerToolbar>
						</Panel>
						<List xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" noDataText="No hay programas relacionados con esta aplicacion" items="{apphyssoft_programas}" id="Programas" cd:w5g.dt.context="/Empresas">
					        <items>
					            <StandardListItem type="Navigation" icon="sap-icon://desktop-mobile" id="item1" title="{NOMBRE}" description="{DESCRIPCION}" press="handleListItemPress"/>
					        </items>
					    </List>
					</IconTabFilter>
					
				</items>
			</IconTabBar>
		</content>
	</Page>
</mvc:View>